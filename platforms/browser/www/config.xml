<?xml version='1.0' encoding='utf-8'?>
<widget id="com.garlicoin.androidwallet" version="1.3.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Garlicoin Wallet</name>
    <description>
        Garlicoin Wallet
    </description>
    <author email="mpochert@gmail.com" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>To scan barcodes</string>
    </edit-config>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="29" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#1a2732" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
</widget>
